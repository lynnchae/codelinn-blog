<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.lynn.springbootstarter.dao.CommentDao">
    <resultMap id="resultMap" type="org.lynn.springbootstarter.model.Comment">
    </resultMap>

    <select id="queryCommentVO" resultType="org.lynn.springbootstarter.model.vo.CommentVO">
        select a.*,b.avatar
        from t_comment a left join t_visitor b on a.commenter_id=b.id
        where 1=1
        <if test="blogId != null" >
         and blog_id = #{blogId}
        </if>
        <if test="parentId != null" >
            and parent_id = #{parentId}
        </if>

    </select>
</mapper>
