<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.lynn.springbootstarter.dao.BlogDao">
    <resultMap id="resultMap" type="org.lynn.springbootstarter.model.Blog">
    </resultMap>

    <select id="getUserBlogsWithoutContent" resultType="org.lynn.springbootstarter.controller.response.SimpleBlogResponse">
        select id,user_id,title,tags
        from t_blog
        where user_id=#{userId}

    </select>
</mapper>
